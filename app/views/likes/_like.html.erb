<% if @item.liked_by?(current_user)%>
  <%=link_to "お気に入り解除", item_like_path(@item, @item.likes.find_by(user_id: current_user.id)),  method: :delete, class: "item_likes" , remote: true %>
<% else %>
  <%=link_to "お気に入り登録", item_likes_path(@item), method: :post, class: "item_likes" , remote: true %>
<% end %>